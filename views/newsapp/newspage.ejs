<!DOCTYPE html>
<html>
  <head>
    <title>News</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
      /* --- Global Styles --- */
      body {
        font-family: 'Verdana', sans-serif;
        background-color: #f0f4f8;
        margin: 0;
        padding: 0;
        color: #333;
        overflow-x: hidden;
      }

      /* --- Header --- */
      header {
        background: linear-gradient(90deg, #6c5ce7, #a29bfe);
        color: white;
        padding: 30px 20px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        border-bottom-left-radius: 25px;
        border-bottom-right-radius: 25px;
      }

      header h1 {
        font-size: 2.5rem;
        margin: 0;
        animation: fadeInDown 1s ease;
        letter-spacing: 1px;
      }

      /* --- Container --- */
      .container {
        max-width: 1300px;
        margin: 40px auto;
        padding: 0 20px;
      }

      /* --- News Grid --- */
      .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 25px;
      }

      /* --- Card --- */
      .card {
        background-color: #ffffff;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 0.6s forwards;
      }

      .card:hover {
        transform: translateY(-10px) scale(1.04);
        box-shadow: 0 12px 25px rgba(0,0,0,0.15);
      }

      .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.6s ease;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
      }

      .card:hover img {
        transform: scale(1.1);
      }

      .card-body {
        padding: 20px;
      }

      .title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #2d3436;
        margin-bottom: 12px;
        transition: color 0.3s ease;
      }

      .card:hover .title {
        color: #6c5ce7;
      }

      .desc {
        font-size: 1rem;
        color: #636e72;
        line-height: 1.6;
        margin-bottom: 15px;
        min-height: 60px;
      }

      .source {
        font-size: 0.9rem;
        color: #b2bec3;
      }

      a {
        display: inline-block;
        padding: 10px 20px;
        background-color: #6c5ce7;
        color: white;
        border-radius: 12px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease;
      }

      a:hover {
        background-color: #341f97;
        transform: scale(1.05);
      }

      /* --- Animations --- */
      @keyframes fadeInDown {
        0% { opacity: 0; transform: translateY(-30px); }
        100% { opacity: 1; transform: translateY(0); }
      }

      @keyframes fadeInUp {
        0% { opacity: 0; transform: translateY(30px); }
        100% { opacity: 1; transform: translateY(0); }
      }

      /* --- Responsive Adjustments --- */
      @media (max-width: 768px) {
        header h1 {
          font-size: 2rem;
        }
        .card img {
          height: 180px;
        }
      }

      @media (max-width: 480px) {
        .card img {
          height: 160px;
        }
        .desc {
          font-size: 0.95rem;
        }
        a {
          padding: 8px 16px;
          font-size: 0.9rem;
        }
      }
    </style>
  </head>

  <body>
    <header>
      <h1>News</h1>
    </header>

    <div class="container">
      <% if (news && news.length > 0) { %>
        <div class="news-grid">
          <% news.forEach((article, index) => { %>
            <div class="card" style="animation-delay: <%= 0.1 * index %>s;">
              <% if (article.urlToImage) { %>
                <img src="<%= article.urlToImage %>" alt="News Image">
              <% } else { %>
                <img src="https://via.placeholder.com/400x200?text=No+Image" alt="No Image">
              <% } %>
              <div class="card-body">
                <div class="title"><%= article.title %></div>
                <div class="desc"><%= article.description || "No description available." %></div>
                <div class="source">Source: <%= article.source.name %></div>
                <a href="<%= article.url %>" target="_blank">Read More</a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p style="text-align:center; font-size:1.2rem; color:#636e72; margin-top:50px;">
          No news found. Please try again later.
        </p>
      <% } %>
    </div>
  </body>
</html>
