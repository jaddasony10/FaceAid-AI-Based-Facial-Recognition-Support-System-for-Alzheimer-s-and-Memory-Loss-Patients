<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/3808de5cb1.js" crossorigin="anonymous"></script>
    <title>Quiz</title>
    <style>
        /* Body & Animated Background */
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            background: linear-gradient(135deg, #fffbf0, #e0f7fa, #fce4ec);
            background-size: 400% 400%;
            animation: bgGradient 20s ease infinite;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        @keyframes bgGradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Header */
        .header {
            width: 100%;
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: rgba(0,0,0,0.05);
            backdrop-filter: blur(6px);
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .header img {
            height: 45px;
            filter: brightness(0.5);
            cursor: pointer;
            transition: transform 0.3s ease, filter 0.3s ease;
        }

        .header img:hover {
            transform: scale(1.1);
            filter: brightness(0.8);
        }

        .quiz-title {
            font-weight: 700;
            font-size: 1.8rem;
            color: #4a0d66;
            text-align: center;
            flex: 1;
        }

        /* Container */
        .container {
            max-width: 720px;
            width: 95%;
            margin: 2rem auto;
            display: flex;
            flex-direction: column;
            gap: 3rem; /* Space between questions */
        }

        /* Quiz Cards */
        .question-card {
            background: linear-gradient(145deg, #ffffff, #f3f0ff);
            border-radius: 20px;
            padding: 1.5rem 2rem;
            box-shadow: 0 8px 30px rgba(0,0,0,0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .question-card::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at center, rgba(106,17,203,0.1) 0%, transparent 70%);
            transform: rotate(25deg);
            pointer-events: none;
        }

        .question-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 35px rgba(106,17,203,0.2);
            background: linear-gradient(145deg, #f0e7ff, #e6f0ff);
        }

        .question-card span {
            font-weight: 700;
            font-size: 1.15rem;
            color: #4a0d66;
        }

        /* Options */
        .options {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-top: 1rem;
        }

        .option-btn {
            flex: 1 1 30%;
            padding: 0.9rem 1rem;
            text-align: center;
            border-radius: 25px;
            background: #fdf9ff;
            border: 2px solid #e0d4ff;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            user-select: none;
        }

        .option-btn:hover {
            background: linear-gradient(135deg, #a855f7, #4f46e5);
            color: white;
            transform: scale(1.05);
        }

        input[type="radio"] {
            display: none;
        }

        input[type="radio"]:checked + label {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: white;
            border-color: #6a11cb;
            transform: scale(1.05);
        }

        /* Submit Button */
        .purp-btn {
            margin: 2rem auto;
            display: block;
            width: 50%;
            padding: 1rem;
            font-size: 1.2rem;
            font-weight: 700;
            color: white;
            background: linear-gradient(90deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
            border: none;
            border-radius: 30px;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
            transition: transform 0.2s ease, opacity 0.2s ease;
        }

        .purp-btn:hover {
            transform: scale(1.03);
            opacity: 0.95;
        }

        /* Spacing */
        .emptytop, .emptydown { height: 1rem; }

        /* Responsive */
        @media (max-width: 576px) {
            .option-btn { flex: 1 1 100%; }
        }
    </style>
</head>

<body>
    <div class="header">
        <img src="/img/back.png" alt="Back">
        <div class="quiz-title">QUIZ</div>
        <div style="width:45px;"></div>
    </div>

    <div class="container">
        <div class="quiz">
            <div class="emptytop"></div>
            <form action="/games/SAGE" method="POST">
                <% for(let i=1;i<=6;i++) { %>
                <div class="question-card">
                    <span>Q<%=i%>) <%=testData[`Q${i}`].question%></span>
                    <div class="options">
                        <% testData[`Q${i}`].options.forEach((item, idx) => { %>
                            <!-- Unique ID per option -->
                            <input type="radio" id="q<%=i%>o<%=idx%>" name="answer<%=i%>" value="<%=item%>">
                            <label class="option-btn" for="q<%=i%>o<%=idx%>"><%= item %></label>
                        <% }) %>
                    </div>
                </div>
                <% } %>
                <div class="emptydown"></div>
                <button type="submit" class="purp-btn">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>
